{
    "name": "STEP - React Web Component",
    "description": "Microfrontend for web components in react",
    "type": "template",
    "releaseStage": "stable",
    "tenantId": "step",
    "itemId": "step-react-web-component-template",
    "repositoryUrl": "https://github.com/Step-4-Business/step-quarkus-template/",
    "label": "Quarkus Template",
    "categoryId": "kotlin",
    "suportedBy": "Step4Business",
    "visibility":{
        "allTenants": true
    },
    "documentation": {
        "type": "markdown",
        "url": "https://raw.githubusercontent.com/Step-4-Business/step-quarkus-template//main/README.md"
    },
    "image": {
        "localPath": "./image.png"
    },
    "supportedByImage": {
        "localPath": "./supportedByImage.jpeg"
    },
    "resources":{
        "services":{
            "step-react-web-component-service":{
                "name": "step-react-web-component-service",
                "description": "Simple Quarkus Service",
                "archiveUrl": "https://github.com/Step-4-Business/step-quarkus-template/archive/main.tar.gz",
                "containerPorts": [
                    {
                        "name": "http",
                        "from": 80,
                        "to": 3000,
                        "protocol": "TCP"
                    }
                ],
                "type": "template",
                "defaultEnvironmentVariables": [
                    {
                      "name": "LOG_LEVEL",
                      "value": "{{LOG_LEVEL}}",
                      "valueType": "plain"
                    },
                    {
                      "name": "HTTP_PORT",
                      "value": "3000",
                      "valueType": "plain"
                    }
                ],
                "defaultProbes": {
                    "liveness": {
                        "initialDelaySeconds": 60,
                        "periodSeconds": 15,
                        "timeoutSeconds": 1,
                        "successThreshold": 1,
                        "failureThreshold": 3
                    }
                },
                "defaultResources": {
                    "cpuLimits": {
                      "max": "150m",
                      "min": "50m"
                    },
                    "memoryLimits": {
                      "max": "300Mi",
                      "min": "300Mi"
                    }
                  }
            }
        }
    }
}